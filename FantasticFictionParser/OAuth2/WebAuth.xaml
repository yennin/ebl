<Window x:Name="authWindow" x:Class="FantasticFictionParser.OAuth2.WebAuth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Authenticate" Height="500" Width="800" WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>
        
        <WindowsFormsHost x:Name="windowsFormHost" Margin="2,2,2,0" Grid.Row="0" Grid.ColumnSpan="2">
            
        </WindowsFormsHost>
        <!-- Accept or Cancel -->
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Orientation="Horizontal" Height="24" HorizontalAlignment="Right">
            <Button Name="okButton" Click="okButton_Click" Width="100" Margin="0,0,2,0">Close</Button>
            <Button Name="cancelButton" IsCancel="True" Width="100" Margin="0,0,2,0" Click="cancelButton_Click">Cancel</Button>
        </StackPanel>

    </Grid>
</Window>
